];

const internalLinks = [
  {
    title: 'Играть с друзьями по ссылке',
    description: 'Подробный сценарий приглашений и регулярных матчей.',
    href: '/ru/play-chess-with-friends-link/',
  },
  {
    title: 'Онлайн шахматы без регистрации',
    description: 'Как запускать партии без обязательного аккаунта.',
    href: '/ru/online-chess-without-registration/',
  },
  {
    title: 'Chess rules for beginners (EN)',
    description: 'Английская версия правил для друзей и коллег.',
    href: '/chess-rules-for-beginners/',
