---
import type { UseCase } from './types';

const {
  title,
  items,
} = Astro.props as {
  title: string;
  items: UseCase[];
};
---

<section class="seo-section" aria-labelledby="use-cases-title">
  <h2 id="use-cases-title">{title}</h2>
  <div class="cards-grid cards-grid-3">
    {items.map((item) => (
      <article class="seo-card">
        <h3>{item.title}</h3>
        <p>{item.description}</p>
      </article>
    ))}
  </div>
</section>
