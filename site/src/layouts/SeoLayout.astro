---
import "../styles/global.css";

type Breadcrumb = {
  name: string;
  url: string;
};

type FaqItem = {
  question: string;
  answer: string;
};

const {
  lang,
  title,
  description,
  canonicalUrl,
  locale,
  breadcrumbs = [],
  faq = [],
  ogImage = "https://chesson.me/og.png",
} = Astro.props as {
  lang: string;
  title: string;
  description: string;
  canonicalUrl: string;
  locale: string;
  breadcrumbs?: Breadcrumb[];
  faq?: FaqItem[];
  ogImage?: string;
};

const websiteJsonLd = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "Chesson",
  url: "https://chesson.me/",
  inLanguage: lang,
});

const breadcrumbJsonLd = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: breadcrumbs.map((item, index) => ({
    "@type": "ListItem",
    position: index + 1,
    name: item.name,
    item: item.url,
  })),
});

const faqJsonLd = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faq.map((item) => ({
    "@type": "Question",
    name: item.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: item.answer,
    },
  })),
});
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="robots" content="index,follow,max-snippet:-1,max-image-preview:large,max-video-preview:-1" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content={locale} />
    <meta property="og:site_name" content="Chesson" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="icon" href="/favicon.png" sizes="64x64" type="image/png" />
    <meta name="theme-color" content="#000000" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <script type="application/ld+json" set:html={websiteJsonLd}></script>
    <script type="application/ld+json" set:html={breadcrumbJsonLd}></script>
    {faq.length > 0 && <script type="application/ld+json" set:html={faqJsonLd}></script>}
  </head>
  <body>
    <div class="page-bg">
      <div class="ambient ambient-one"></div>
      <div class="ambient ambient-two"></div>
      <div class="ambient ambient-three"></div>
      <header class="seo-header">
        <a href={lang === "ru" ? "/ru/" : "/"} class="brand-link" aria-label="Chesson home">
          <img src="/chesson-logo.svg" alt="Chesson" class="brand-logo" />
        </a>
      </header>
      <slot />
    </div>
  </body>
</html>

<style>
  :root {
    --seo-bg: #000000;
    --seo-bg-soft: #090909;
    --seo-text: #f3f3f8;
    --seo-text-soft: rgba(236, 236, 244, 0.86);
    --seo-accent: #4f39f6;
    --seo-accent-deep: #6d5bff;
    --seo-line: rgba(255, 255, 255, 0.08);
    --seo-card: rgba(255, 255, 255, 0.03);
    --seo-shadow: 0 18px 36px rgba(0, 0, 0, 0.36);
    --seo-round: 18px;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    min-height: 100%;
    background: var(--seo-bg);
    color: var(--seo-text);
    font-family: "Segoe UI", "SF Pro Text", "Helvetica Neue", Arial, sans-serif;
  }

  .page-bg {
    position: relative;
    min-height: 100vh;
    background:
      radial-gradient(66% 45% at 10% -10%, rgba(79, 57, 246, 0.22), transparent 72%),
      radial-gradient(55% 35% at 100% 0%, rgba(109, 91, 255, 0.2), transparent 74%),
      linear-gradient(180deg, #070707 0%, #030303 56%, #000000 100%);
    overflow: clip;
  }

  .ambient {
    position: absolute;
    border-radius: 999px;
    filter: blur(80px);
    pointer-events: none;
    z-index: 0;
  }

  .ambient-one {
    width: 320px;
    height: 320px;
    top: -120px;
    right: -80px;
    background: rgba(79, 57, 246, 0.24);
  }

  .ambient-two {
    width: 300px;
    height: 300px;
    bottom: -120px;
    left: -100px;
    background: rgba(109, 91, 255, 0.18);
  }

  .ambient-three {
    width: 240px;
    height: 240px;
    top: 45%;
    right: -90px;
    background: rgba(255, 255, 255, 0.08);
  }

  .seo-header {
    position: sticky;
    top: 0;
    z-index: 40;
    display: flex;
    align-items: center;
    min-height: 74px;
    padding: 14px 22px;
    backdrop-filter: blur(10px);
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.88), rgba(0, 0, 0, 0.45));
    border-bottom: 1px solid var(--seo-line);
  }

  .brand-link {
    display: inline-flex;
    align-items: center;
    opacity: 0.95;
    transition: opacity 180ms ease;
  }

  .brand-link:hover {
    opacity: 1;
  }

  .brand-logo {
    height: 28px;
    width: auto;
  }

  @media (max-width: 760px) {
    .seo-header {
      min-height: 66px;
      padding: 12px 16px;
    }

    .brand-logo {
      height: 24px;
    }

    .ambient-three {
      display: none;
    }
  }
</style>

<style is:global>
  .seo-wrap {
    position: relative;
    z-index: 1;
    max-width: 1100px;
    margin: 0 auto;
    padding: clamp(20px, 4vw, 48px) clamp(14px, 4vw, 36px) 84px;
  }

  .seo-section {
    margin-top: clamp(22px, 4.8vw, 42px);
  }

  .seo-wrap h2 {
    margin: 0 0 14px;
    line-height: 1.3;
    letter-spacing: -0.01em;
    font-size: clamp(1.3rem, 2.4vw, 1.95rem);
    text-wrap: balance;
  }

  .seo-wrap h3 {
    margin: 0 0 9px;
    line-height: 1.35;
    font-size: 1.06rem;
    letter-spacing: 0.02em;
    color: #e8f4ff;
  }

  .seo-wrap p,
  .seo-wrap li {
    color: var(--seo-text-soft);
    line-height: 1.72;
    font-size: 1.01rem;
  }

  .seo-wrap a {
    color: #b8aeff;
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .seo-highlight {
    border: 1px solid rgba(109, 91, 255, 0.48);
    background: linear-gradient(120deg, rgba(79, 57, 246, 0.24), rgba(109, 91, 255, 0.16));
    border-radius: var(--seo-round);
    padding: 16px 18px;
    box-shadow: var(--seo-shadow);
    color: #ece9ff;
    font-weight: 600;
  }

  .cards-grid {
    display: grid;
    gap: 12px;
  }

  .cards-grid-3 {
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }

  .seo-card {
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(255, 255, 255, 0.03);
    border-radius: var(--seo-round);
    padding: 16px;
    box-shadow: var(--seo-shadow);
    transition: border-color 180ms ease, transform 180ms ease;
  }

  .seo-card:hover {
    border-color: rgba(109, 91, 255, 0.48);
    transform: translateY(-2px);
  }

  .numbered-grid {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 12px;
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  .step-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 999px;
    margin-bottom: 10px;
    color: #efeaff;
    background: rgba(79, 57, 246, 0.22);
    border: 1px solid rgba(109, 91, 255, 0.45);
    font-weight: 700;
    font-size: 0.92rem;
  }

  .trust-list {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 12px;
  }

  .trust-list li {
    border-radius: 14px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: rgba(255, 255, 255, 0.03);
    padding: 12px 14px;
    color: #ece9ff;
    text-align: center;
    font-weight: 600;
  }

  .faq-accordion {
    display: grid;
    gap: 10px;
  }

  .faq-item {
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(255, 255, 255, 0.03);
    border-radius: var(--seo-round);
    padding: 0 16px;
    box-shadow: var(--seo-shadow);
  }

  .faq-item summary {
    cursor: pointer;
    list-style: none;
    padding: 15px 4px;
    color: #eef8ff;
    font-weight: 600;
    position: relative;
    padding-right: 28px;
  }

  .faq-item summary::-webkit-details-marker {
    display: none;
  }

  .faq-item summary::after {
    content: "+";
    position: absolute;
    right: 0;
    top: 15px;
    color: #b8aeff;
    transition: transform 180ms ease;
  }

  .faq-item[open] summary::after {
    transform: rotate(45deg);
  }

  .faq-item p {
    margin: 0;
    padding: 0 4px 15px;
  }

  .seo-link-card {
    text-decoration: none;
    display: block;
  }

  .seo-link-card p {
    margin: 0;
  }

  .sticky-mini-cta {
    position: fixed;
    right: 18px;
    bottom: 18px;
    width: min(285px, calc(100vw - 26px));
    z-index: 50;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: linear-gradient(180deg, rgba(16, 12, 46, 0.95), rgba(6, 6, 8, 0.95));
    backdrop-filter: blur(10px);
    padding: 12px;
    box-shadow: 0 18px 32px rgba(0, 0, 0, 0.4);
  }

  .sticky-mini-kicker {
    margin: 0;
    color: var(--seo-accent);
    font-size: 0.76rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .sticky-mini-text {
    margin: 6px 0 10px;
    font-size: 0.9rem;
    line-height: 1.45;
    color: #ddd6ff;
  }

  .sticky-mini-cta .btn {
    width: 100%;
    text-align: center;
    display: inline-block;
    box-sizing: border-box;
  }

  @media (max-width: 980px) {
    .cards-grid-3,
    .trust-list {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .numbered-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 760px) {
    .seo-wrap {
      padding-bottom: 60px;
    }

    .cards-grid-3,
    .trust-list {
      grid-template-columns: 1fr;
    }

    .sticky-mini-cta {
      display: none;
    }
  }
</style>
