---
import '../styles/global.css';

const {
	lang,
	title,
	description,
	canonicalUrl,
	ogImage,
	locale,
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<title>
			{title}
		</title>
		<meta
			name="description"
			content={description}
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="canonical" href={canonicalUrl} />

		<link rel="icon" href="/favicon.svg" type="image/x-icon" />
		<meta name="generator" content={Astro.generator} />

		<!-- Open Graph -->
		<meta property="og:title" content={title} />
		<meta
			property="og:description"
			content={description}
		/>
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalUrl} />
		<meta
			property="og:image"
			content={ogImage}
		/>
		<meta property="og:site_name" content={title} />
		<meta property="og:locale" content={locale} />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta
			name="twitter:description"
			content={description}
		/>
		<meta
			name="twitter:image"
			content={ogImage}
		/>

		<!-- JSON-LD: WebSite -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "WebSite",
				"name": "ChessOn",
				"url": "https://chesson.me/"
			}
		</script>
		<!-- Yandex.Metrika counter -->
		<script type="text/javascript">
			(function(m,e,t,r,i,k,a){
				m[i]=m[i]||function(){(m[i].a=m[i].a||[]).push(arguments)};
				m[i].l=1*new Date();
				for (var j = 0; j < document.scripts.length; j++) {if (document.scripts[j].src === r) { return; }}
				k=e.createElement(t),a=e.getElementsByTagName(t)[0],k.async=1,k.src=r,a.parentNode.insertBefore(k,a)
			})(window, document,'script','https://mc.yandex.ru/metrika/tag.js?id=105020689', 'ym');

			ym(105020689, 'init', {ssr:true, webvisor:true, clickmap:true, ecommerce:"dataLayer", accurateTrackBounce:true, trackLinks:true});
		</script>
		<!-- /Yandex.Metrika counter -->
	</head>

	<body>
		<noscript><div><img src="https://mc.yandex.ru/watch/105020689" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
